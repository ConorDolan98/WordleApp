<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:WordleGame.ViewModel"
             x:Class="WordleGame.View.ScoreboardPage">

    <ContentPage.BindingContext>
        <viewModel:ScoreboardViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Scoreboard" FontSize="Large" />
        <CollectionView ItemsSource="{Binding Scoreboard}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding PlayerName}" WidthRequest="100" />
                        <Label Text="{Binding Word}" WidthRequest="100" />
                        <Label Text="{Binding AttemptsUsed}" WidthRequest="50" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>


