<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:WordleGame.ViewModel"
             x:Class="WordleGame.View.ScoreboardPage"
             Title="Scoreboard">

    <ContentPage.BindingContext>
        <viewModel:ScoreboardViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <ListView ItemsSource="{Binding Scores}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding PlayerName}" WidthRequest="100" />
                            <Label Text="{Binding Word}" WidthRequest="100" />
                            <Label Text="{Binding Attempts}" WidthRequest="50" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
