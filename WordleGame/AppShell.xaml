<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:WordleGame.View"
       x:Class="WordleGame.AppShell">

    <!-- Define the route for LoginPage -->
    <ShellContent Title="LoginPage" ContentTemplate="{DataTemplate view:LoginPage}" Route="login"/>

    <!-- Define the route for MainPage -->
    <ShellContent Title="MainPage" ContentTemplate="{DataTemplate view:MainPage}" Route="main" />

    <!-- Define the route for GamePage -->
    <ShellContent Title="GamePage" ContentTemplate="{DataTemplate view:GamePage}" Route="game" />

    <!-- Define the route for ScoreboardPage -->
    <ShellContent Title="ScoreboardPage" ContentTemplate="{DataTemplate view:ScoreboardPage}" Route="scoreboard"/>

</Shell>